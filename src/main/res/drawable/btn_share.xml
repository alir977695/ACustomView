<selector xmlns:android="http://schemas.android.com/apk/res/android">
        <item android:state_pressed="true">
                <shape
                    android:shape="oval">
                        <solid android:color="#4b81be"/>
                </shape>
        </item>
        <item android:state_pressed="false">
                <layer-list>
                        <item>
                                <shape
                                    android:shape="oval">
                                        <solid android:color="#4b81be"/>
                                </shape>
                        </item>
                        <item android:gravity="center">
                                <bitmap android:src="@drawable/ic_menu_share"/>
                        </item>
                </layer-list>
        </item>
</selector>