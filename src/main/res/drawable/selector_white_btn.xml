<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle" >
                    <solid android:color="#929292" />
                </shape>
            </item>
            <item android:bottom="10dp" android:top="10dp">
                <shape>
                    <stroke android:width=".5dp" android:color="#d2d2d2"/>
                </shape>
            </item>
            <item android:left="1dp" android:right="1dp">
                <shape>
                    <solid android:color="#929292"/>
                </shape>
            </item>
            <item android:left="-1dp" android:right="-1dp">
                <shape>
                    <stroke android:width="1dp"
                        android:color="#d2d2d2"/>
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_pressed="false">
        <layer-list>
            <item>
                <shape android:shape="rectangle" >
                    <solid android:color="#ffffff" />
                </shape>
            </item>
            <item android:bottom="10dp" android:top="10dp">
                <shape>
                    <stroke android:width=".5dp" android:color="#d2d2d2"/>
                </shape>
            </item>
            <item android:left="1dp" android:right="1dp">
                <shape>
                    <solid android:color="#ffffff"/>
                </shape>
            </item>
            <item android:left="-1dp" android:right="-1dp">
                <shape>
                    <stroke android:width="1dp"
                        android:color="#d2d2d2"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>