<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape android:shape="oval">
            <solid android:color="#e63535"/>
            <stroke android:color="#d82d2d"
                android:width="1dp"/>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="oval">
            <solid android:color="#d82d2d"/>
            <stroke android:color="#e63535"
                android:width="1dp"/>
        </shape>
    </item>
</selector>