<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle" >
                    <solid android:color="#929292" />
                    <corners android:bottomLeftRadius="100dp"
                        android:topLeftRadius="100dp"/>
                </shape>
            </item>
            <item android:right="-1dp">
                <shape>
                    <corners android:bottomLeftRadius="100dp"
                        android:topLeftRadius="100dp"/>
                    <solid android:color="#929292" />
                    <stroke
                        android:width="1dp"
                        android:color="#d2d2d2" />
                </shape>
            </item>
            <item android:top="10dp" android:bottom="10dp" android:left="20dp">
                <shape>
                    <stroke android:width=".5dp" android:color="#d2d2d2"/>
                </shape>
            </item>
            <item android:right="1dp" android:bottom="1dp" android:top="1dp" android:left="15dp">
                <shape>
                    <corners android:bottomLeftRadius="99dp"
                        android:topLeftRadius="99dp"/>
                    <solid android:color="#929292" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_pressed="false">
        <layer-list>
            <item>
                <shape android:shape="rectangle" >
                    <solid android:color="#ffffff" />
                    <corners android:bottomLeftRadius="100dp"
                        android:topLeftRadius="100dp"/>
                </shape>
            </item>
            <item android:right="-1dp">
                <shape>
                    <corners android:bottomLeftRadius="100dp"
                        android:topLeftRadius="100dp"/>
                    <solid android:color="#ffffff" />
                    <stroke
                        android:width="1dp"
                        android:color="#d2d2d2" />
                </shape>
            </item>
            <item android:top="10dp" android:bottom="10dp" android:left="20dp">
                <shape>
                    <stroke android:width=".5dp" android:color="#d2d2d2"/>
                </shape>
            </item>
            <item android:right="1dp" android:bottom="1dp" android:top="1dp" android:left="15dp">
                <shape>
                    <corners android:bottomLeftRadius="99dp"
                        android:topLeftRadius="99dp"/>
                    <solid android:color="#ffffff" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>