<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle" >
                    <solid android:color="#f8f8f8" />
                    <corners android:bottomRightRadius="100dp"
                        android:topRightRadius="100dp"/>
                </shape>
            </item>
            <item android:left="-1dp">
                <shape>
                    <corners android:bottomRightRadius="100dp"
                        android:topRightRadius="100dp"/>
                    <solid android:color="#f8f8f8" />
                    <stroke
                        android:width="1dp"
                        android:color="#d2d2d2" />
                </shape>
            </item>
            <item android:top="10dp" android:bottom="10dp" android:right="20dp">
                <shape>
                    <stroke android:width=".5dp" android:color="#d2d2d2"/>
                </shape>
            </item>
            <item android:left="1dp" android:bottom="1dp" android:top="1dp" android:right="15dp">
                <shape>
                    <corners android:bottomRightRadius="99dp"
                        android:topRightRadius="99dp"/>
                    <solid android:color="#f8f8f8" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_pressed="false">
        <layer-list>
            <item>
                <shape android:shape="rectangle" >
                    <solid android:color="#e6e6e6" />
                    <corners android:bottomRightRadius="100dp"
                        android:topRightRadius="100dp"/>
                </shape>
            </item>
            <item android:left="-1dp">
                <shape>
                    <corners android:bottomRightRadius="100dp"
                        android:topRightRadius="100dp"/>
                    <solid android:color="#e6e6e6" />
                    <stroke
                        android:width="1dp"
                        android:color="#d2d2d2" />
                </shape>
            </item>
            <item android:top="10dp" android:bottom="10dp" android:right="20dp">
                <shape>
                    <stroke android:width=".5dp" android:color="#d2d2d2"/>
                </shape>
            </item>
            <item android:left="1dp" android:bottom="1dp" android:top="1dp" android:right="15dp">
                <shape>
                    <corners android:bottomRightRadius="99dp"
                        android:topRightRadius="99dp"/>
                    <solid android:color="#e6e6e6" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>